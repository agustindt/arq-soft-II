# Configuración del entorno - Sistema de Actividades Deportivas
# Copia este archivo a .env y ajusta los valores según tu entorno

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
PROJECT_NAME=sports-activities-system
ENVIRONMENT=development

# =============================================================================
# FRONTEND
# =============================================================================
REACT_APP_USERS_API_URL=http://localhost:8081
REACT_APP_ACTIVITIES_API_URL=http://localhost:8082
REACT_APP_SEARCH_API_URL=http://localhost:8083

# =============================================================================
# BACKEND - USERS API
# =============================================================================
USERS_API_PORT=8081
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# Base de datos MySQL
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=rootpassword
MYSQL_DATABASE=users_db

# =============================================================================
# BACKEND - ACTIVITIES API
# =============================================================================
ACTIVITIES_API_PORT=8082
MONGO_URI=mongodb://mongo:27017/activities_db
USERS_API_URL=http://users-api:8081

# =============================================================================
# BACKEND - SEARCH API
# =============================================================================
SEARCH_API_PORT=8083
SOLR_URL=http://solr:8983/solr
SOLR_CORE=activities
MEMCACHED_URL=memcached:11211
ACTIVITIES_API_URL=http://activities-api:8082

# =============================================================================
# RABBITMQ
# =============================================================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Exchanges y Queues
ACTIVITIES_EXCHANGE=activities_exchange
ACTIVITIES_QUEUE=activities_queue
ACTIVITIES_ROUTING_KEY=activity.updated

# =============================================================================
# BASES DE DATOS
# =============================================================================

# MySQL
MYSQL_ROOT_PASSWORD=rootpassword

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=activities_db

# =============================================================================
# SOLR
# =============================================================================
SOLR_HEAP=512m
SOLR_JAVA_MEM=-Xms512m -Xmx512m

# =============================================================================
# MEMCACHED
# =============================================================================
MEMCACHED_MEMORY=64
MEMCACHED_PORT=11211

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Hot reload para desarrollo
ENABLE_HOT_RELOAD=true

# Debug mode
DEBUG=true

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================
# Descomentar para producción y cambiar valores
# JWT_SECRET=your-production-jwt-secret-very-long-and-secure
# MYSQL_PASSWORD=secure-production-password
# RABBITMQ_PASSWORD=secure-rabbitmq-password
# ENVIRONMENT=production
# DEBUG=false

# =============================================================================
# MONITOREO Y SALUD
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# CACHE
# =============================================================================
# Local cache (CCache)
LOCAL_CACHE_SIZE=1000
LOCAL_CACHE_TTL=300

# Distributed cache (Memcached)
DISTRIBUTED_CACHE_TTL=600
DISTRIBUTED_CACHE_PREFIX=sports_activities

# =============================================================================
# CONCURRENCIA
# =============================================================================
# Para el procesamiento concurrente en activities-api
MAX_GOROUTINES=10
WORKER_POOL_SIZE=5

# =============================================================================
# CONFIGURACIÓN DE RED
# =============================================================================
NETWORK_NAME=app-network