<?xml version="1.0" encoding="UTF-8" ?>
<config>
  <!-- Versi贸n de Lucene -->
  <luceneMatchVersion>9.4.0</luceneMatchVersion>

  <!-- Directorio de datos -->
  <dataDir>${solr.data.dir:}</dataDir>

  <!-- Configuraci贸n b谩sica -->
  <directoryFactory name="DirectoryFactory" class="solr.StandardDirectoryFactory"/>

  <!-- Manejador de actualizaciones -->
  <updateHandler class="solr.DirectUpdateHandler2">
    <autoCommit>
      <maxTime>15000</maxTime>
    </autoCommit>
    <autoSoftCommit>
      <maxTime>2000</maxTime>
    </autoSoftCommit>
  </updateHandler>

  <!-- Cach茅s -->
  <query>
    <filterCache class="solr.FastLRUCache" size="512" initialSize="512"/>
    <queryResultCache class="solr.LRUCache" size="512" initialSize="512"/>
    <documentCache class="solr.LRUCache" size="512" initialSize="512"/>
  </query>

  <!-- Dispatcher de requests -->
  <requestDispatcher handleSelect="true">
    <requestParsers enableRemoteStreaming="true" multipartUploadLimitInKB="2048000"/>
  </requestDispatcher>

  <!--  Handler principal de b煤squeda -->
  <requestHandler name="/select" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <int name="rows">10</int>
      <str name="df">text</str>
    </lst>
  </requestHandler>

  <!-- Otros handlers comunes -->
  <requestHandler name="/update" class="solr.UpdateRequestHandler"/>
  <requestHandler name="/admin/ping" class="solr.PingRequestHandler"/>

  <!-- Configuraci贸n de administraci贸n -->
  <admin>
    <defaultQuery>*:*</defaultQuery>
  </admin>
</config>
